@model Wiki.Models.Biz.ChangerProfilViewModel

@{
    ViewBag.Title = "ModifierProfile";
}

@section gauche {
    @*@Html.Action("TableDesMatieres", "Home")*@
    @Html.Action("PartialTableDesMatieres", "Home")  @*action va dans le controleur tandis que partial n'y va pas*@
}
<h2>ModifierProfile</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4></h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.NomFamille, htmlAttributes: new { @class = "control-label col-xs-12 col-sm-2" })
            <div class="col-xs-10 col-sm-8">
                @Html.EditorFor(model => model.NomFamille, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NomFamille, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Prenom, htmlAttributes: new { @class = "control-label col-xs-12 col-sm-2" })
            <div class="col-xs-10 col-sm-8">
                @Html.EditorFor(model => model.Prenom, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Prenom, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Langue, htmlAttributes: new { @class = "control-label col-xs-12 col-sm-2" })
            <div class="col-xs-6 col-sm-4">
                @Html.DropDownListFor(model => model.Langue, Model.SelectionLangue, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Enregistrer" class="btn btn-default" />
            </div>
        </div>
    </div>
    <div>@Html.ActionLink("Modifier mot de passe", "ModifierMDP", "Account", new { Id = Model.Id, ReturnUrl = this.Request.RawUrl }, null)</div>
    <input type="hidden" name="idAuthor" value=@ViewBag.ReturnUrl>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
